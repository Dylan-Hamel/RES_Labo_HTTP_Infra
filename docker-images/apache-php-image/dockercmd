$ docker build -t my-php-app .
$ docker run -d --name my-running-app my-php-app


$ Start 
docker run -d -p 9090:80 php:7.0-apache

# -d = en arrière plan
# -p = 9090:80 => le port 9090 sera mapé sur le port 80


# Lister les container Docker
docker ps
CONTAINER ID        IMAGE               COMMAND                  CREATED             STATUS              PORTS                  NAMES
918eba74821c        php:7.0-apache      "docker-php-entrypoi…"   6 minutes ago       Up 6 minutes        0.0.0.0:9090->80/tcp   musing_brahmagupta


# Obtenir les informations sur le container 
docker insepect musing_brahmagupta
docker instpect +NamePS


# se connecter sur le container 
docker exec -it musing_brahmagupta /bin/bash

#➜  apache-php-image git:(master) ✗ docker exec -it musing_brahmagupta /bin/bash
#root@918eba74821c:/var/www/html#


# Détruire un container 
docker kill musing_brahmagupta

